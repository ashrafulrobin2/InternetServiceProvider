<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".Ticket_List_Activity"
    tools:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="125dp"
            android:background="@color/color2"
            android:text="Add New Ticket"
            android:textStyle="bold" />


        <android.support.v7.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="wrap_content"
            android:layout_height="93dp"
            android:layout_below="@+id/button"
            android:layout_alignStart="@+id/textView1"
            android:layout_gravity="center"
            android:layout_marginStart="-10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_alignStart="@+id/card_view1"
                android:layout_alignEnd="@+id/card_view1"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="24dp"
                    android:text="Generated"
                    android:textColor="@color/color3"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:gravity="right|end"
                    android:text="16/5/2019"
                    android:textColor="@color/color3"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    ////22222////

    <android.support.v7.widget.CardView

        android:layout_below="@+id/card_view1"
        android:id="@+id/card_view2"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignStart="@+id/card_view1"
            android:layout_alignEnd="@+id/card_view1"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="24dp"
                android:text="Ticket Reason"
                android:textColor="@color/color3"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="right|end"
                android:text="Internet Speed Slow"
                android:textColor="@color/color3"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    /////33333//////

    <android.support.v7.widget.CardView
        android:layout_below="@+id/card_view2"
        android:id="@+id/card_view3"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignStart="@+id/card_view1"
            android:layout_alignEnd="@+id/card_view1"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="24dp"
                android:text="ETA  "
                android:textColor="@color/color3"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="right|end"
                android:text="15 Min"
                android:textColor="@color/color3"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
//////4444444///////

    <android.support.v7.widget.CardView
        android:layout_below="@+id/card_view3"
        android:id="@+id/card_view4"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignStart="@+id/card_view1"
            android:layout_alignEnd="@+id/card_view1"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="24dp"
                android:text="Appoint To "
                android:textColor="@color/color3"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView4_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="right|end"
                android:text="tanjir"
                android:textColor="@color/color3"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    //////555555///////
    <android.support.v7.widget.CardView
        android:layout_below="@+id/card_view4"
        android:id="@+id/card_view5"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignStart="@+id/card_view1"
            android:layout_alignEnd="@+id/card_view1"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="24dp"
                android:text="Status"
                android:textColor="@color/color3"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView5_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="right|end"
                android:text="Complete"
                android:textColor="@color/color3"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    /////////////66666666666666///////////////////////

    <android.support.v7.widget.CardView
        android:layout_below="@+id/card_view5"
        android:id="@+id/card_view6"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignStart="@+id/card_view1"
            android:layout_alignEnd="@+id/card_view1"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="24dp"
                android:text="Completed"
                android:textColor="@color/color3"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView6_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="right|end"
                android:text="9th April 2019,8.13pm"
                android:textColor="@color/color3"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    </RelativeLayout>

</ScrollView>